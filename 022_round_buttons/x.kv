<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Button:
            text: 'Hello World'
            background_normal: ''
            background_color: (0,1,0,1)

        Button:
            background_normal: ''
