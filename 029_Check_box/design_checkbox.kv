<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            text: "Select Items in the List "
            font_size: 32

        GridLayout:
            cols: 2

            Label:
                text: "Pepperoni"
                font_size: 20

            CheckBox:
                canvas.before:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        pos:self.center_x-8, self.center_y-8
                        size:[16,16]
                    Color:
                        rgb: 0,0,0
                    Rectangle:
                        pos:self.center_x-7, self.center_y-7
                        size:[14,14]
                on_active: root.checkbox_click(self, self.active, "Pepperoni")
                        
            Label:
                text: "Cheese"
                font_size: 20

            CheckBox:
                canvas.before:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        pos:self.center_x-8, self.center_y-8
                        size:[16,16]
                    Color:
                        rgb: 0,0,0
                    Rectangle:
                        pos:self.center_x-7, self.center_y-7
                        size:[14,14]
                on_active: root.checkbox_click(self, self.active, "Cheese")

                        
            Label:
                text: "MeatPie"
                font_size: 20

            CheckBox:

                canvas.before:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        pos:self.center_x-8, self.center_y-8
                        size:[16,16]
                    Color:
                        rgb: 0,0,0
                    Rectangle:
                        pos:self.center_x-7, self.center_y-7
                        size:[14,14]
                on_active: root.checkbox_click(self, self.active, "MeatPie")
                

        Label:
            id: output_label
            text: ''

