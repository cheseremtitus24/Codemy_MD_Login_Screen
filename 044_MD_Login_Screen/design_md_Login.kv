<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        paddding: 20
        spacing: 20
        

        Screen:
            MDCard:
                size_hint: None, None
                size: 300, 400
                pos_hint: {"center_x": .5, "center_y": .5}
                elevation: 10
                spacing: 25
                padding: 25
                orientation: "vertical"
                
                MDLabel:
                    id: notify 
                    font_size: 15 
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDLabel:
                    id: welcome_label
                    text: "WELCOME"
                    font_size: 40
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15

                MDTextFieldRound:
                    id: user
                    hint_text: "username"
                    icon_right: "account"
                    size_hint_x:None
                    width: 200
                    font_size: 18
                    pos_hint: {"center_x": .5}


                MDTextFieldRound:
                    id: password 
                    hint_text: "password"
                    icon_right: "eye-off"
                    size_hint_x:None
                    width: 200
                    font_size: 18
                    pos_hint: {"center_x": .5}
                    password: True

                MDRoundFlatButton:
                    text: "LOG IN"
                    font_size: 12
                    pos_hint: {"center_x": .5}
                    #also works
                    on_press: root.logger()
                    
                    #on_press: app.root.logger()
                    

                MDRoundFlatButton:
                    text: "CLEAR"
                    font_size: 12
                    pos_hint: {"center_x": .5}
                    on_press: app.root.clear()

                Widget:
                    size_hint: None, None
                    height: 25


